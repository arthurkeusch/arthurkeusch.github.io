{% include 'Components/headers.html.twig' %}

<div class="row">
    <div class="col-1">
        <div style="margin-left: 10px; margin-top: 10px; margin-bottom: 10px;"
             title="Revenir à la page d'accueil"
             data-bs-toggle="popup-tip">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white"
                 class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16"
                 onclick="goBack()"
                 style="cursor: pointer;">
                <path d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1"></path>
            </svg>
        </div>
    </div>
    <div class="col-9" style="margin-top: 22px;">
        {% include 'Components/breadcrumb.html.twig' with {
            'past': [
                {'link': '/', 'name': 'Accueil'}
            ],
            'current': title
        } %}
    </div>
</div>

<div class="container">

    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 justify-content-center g-3">

        <div class="col" style="cursor: pointer;" onclick="goTo('/statistics/tools')">
            <div class="card h-100 cards">
                <img src="{{ asset('images/images_accueil/tools.webp') }}"
                     alt="Image outils" class="rounded-top">
                <div class="card-header">
                    <h3 class="card-title text-center">
                        Outils
                    </h3>
                </div>
            </div>
        </div>

        <div class="col" style="cursor: pointer;" onclick="goTo('/statistics/assistants')">
            <div class="card h-100 cards">
                <img src="{{ asset('images/images_accueil/assistants.webp') }}"
                     alt="Image assistant" class="rounded-top">
                <div class="card-header">
                    <h3 class="card-title text-center">
                        Assistants
                    </h3>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    /**
     * Redirige vers l'URL spécifiée.
     * @param {string} to - L'URL vers laquelle rediriger.
     */
    function goTo(to) {
        window.location.href = to;
    }

    /**
     * Redirige vers la page d'accueil.
     */
    function goBack() {
        window.location.href = '/';
    }
</script>